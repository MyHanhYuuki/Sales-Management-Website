@model List<Common.ViewModels.BaoCaoPhieuChiViewModel>
@{
    ViewBag.Title = "Báo cáo phiếu chi";
    Layout = "~/Areas/Admin/Views/Layout/HomeLayout.cshtml";
}
<section id="page-content">
    <div class="header-content">
        <h2><i class="fa fa-list-alt"></i>Báo cáo phiếu chi</h2>
        <div class="breadcrumb-wrapper hidden-xs">
            <a href="@Url.Action("XuatFilePDF", "BaoCaoPhieuChi")" class="btn btn-sm btn-warning btn-xs btn-push"><i class="fa fa-file-pdf-o"></i> Xuất file PDF</a>
            <a href="@Url.Action("XuatFileEXE", "BaoCaoPhieuChi")" class="btn btn-sm btn-warning btn-xs btn-push"><i class="fa fa-file-excel-o"></i> Xuất file Excel</a>
        </div>
    </div>
    <div class="body-content animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="panel rounded shadow">
                    <div class="panel-heading">
                        <div class="pull-left">
                            <h3 class="panel-title">Báo cáo chi tiêu</h3>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="panel-body">
                        <div class="form-body">
                            @using (Ajax.BeginForm("DanhSachBaoCaoPhieuChi", "BaoCaoPhieuChi", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "list", HttpMethod = "Get" }, new { id = "filter_div" }))
                            {
                                <div class="form-group">
                                    <div class="col-md-6">
                                        <label>Từ ngày</label>
                                        <input type="date" id="dateFrom" name="dateFrom" data-date-format="dd/mm/yyyy" required class="form-control rounded" />
                                    </div>
                                    <div class="col-md-6">
                                        <label>Đến ngày</label>
                                        <div class="input-group">
                                            <input type="date" id="dateTo" name="dateTo" required class="form-control rounded" />
                                            <span class="input-group-btn">
                                                <button class="btn btn-default" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                            }
                            <div id="list">
                                @{Html.RenderAction("DanhSachBaoCaoPhieuChi", "BaoCaoPhieuChi");}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/Scripts/bootstrap.min.js"></script>