@model List<Common.ViewModels.BaoCaoTonKhoViewModel>
@using Common.ViewModels
@{
    ViewBag.Title = "Báo cáo tồn kho";
    Layout = "~/Areas/Admin/Views/Layout/HomeLayout.cshtml";
}
<section id="page-content">
    <div class="header-content">
        <h2><i class="fa fa-list-alt"></i>Báo cáo tồn kho</h2>
        <div class="breadcrumb-wrapper hidden-xs">
            <a href="@Url.Action("XuatFilePDF", "BaoCaoTonKho")" class="btn btn-sm btn-warning btn-xs btn-push"><i class="fa fa-file-pdf-o"></i> Xuất file PDF</a>
            <a href="@Url.Action("XuatFileEXE", "BaoCaoTonKho")" class="btn btn-sm btn-warning btn-xs btn-push"><i class="fa fa-file-excel-o"></i> Xuất file Excel</a>
        </div>
    </div>
    <div class="body-content animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="panel rounded shadow">
                    <div class="panel-heading">
                        <div class="pull-left">
                            <h3 class="panel-title">Hàng hóa tồn kho</h3>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="panel-body">
                        <div class="form-body">
                            @using (Ajax.BeginForm("DanhSachBaoCaoTonKho", "BaoCaoTonKho", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "list", HttpMethod = "Get" }, new { id = "filter_div" }))
                            {
                                <div class="form-group">
                                    <div class="col-md-6">
                                        <label>Chọn tháng</label>
                                        @Html.DropDownList("thang", new SelectList(ViewBag.Thang, "Value", "Text"), new { @id = "thang", @class = "form-control rounded" })

                                    </div>
                                    <div class="col-md-6">
                                        <label>Chọn năm</label>
                                        <div class="input-group">
                                            @Html.DropDownList("nam", new SelectList(ViewBag.Nam, "Value", "Text"), new { @id = "nam", @class = "form-control rounded" })

                                            <span class="input-group-btn">
                                                <button class="btn btn-default btn-sm" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                            }
                            <div id="list">
                                @{Html.RenderAction("DanhSachBaoCaoTonKho", "BaoCaoTonKho");}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/Scripts/bootstrap.min.js"></script>