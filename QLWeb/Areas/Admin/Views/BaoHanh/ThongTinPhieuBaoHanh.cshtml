@model IEnumerable<Common.ViewModels.PhieuBaoHanhViewModel>
<div class="col-md-6">
    <div class="panel rounded shadow">
        <div class="panel-heading">
            <div class="pull-left">
                <h3 class="panel-title">Thông tin sản phẩm</h3>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="panel-body no-padding">
            <div class="form-body">
                <div class="table-responsive mb-20">
                    <table class="table table-bordered">
                        <tr>
                            <td>Mã sản phẩm</td>
                            <td>Tên sản phẩm</td>
                        </tr>
                        @foreach (var item in ViewBag.chiTietPhieuBaoHanh)
                        {
                        <tr>
                            <td>@item.maHangHoa</td>
                            <td>@item.tenHangHoa</td>
                        </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-md-6">
    <div class="panel rounded shadow">
        <div class="panel-heading">
            <div class="pull-left">
                <h3 class="panel-title">Thông tin phiếu nhập kho</h3>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="panel-body no-padding">
            <form class="form-horizontal form-bordered" role="form">
                <div class="form-body">
                    @foreach (var a in ViewBag.phieuBaoHanh)
                    {
                    <div class="x_content">
                        <div class="form-group">
                            <label for="firstname-1" class="col-sm-4 control-label">Số phiếu</label>
                            <div class="col-sm-8">
                                <input value="@a.soPhieuBaoHanh" id="soPhieuBaoHanh" type="text" class="form-control input-sm" disabled="disabled" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="password-1" class="col-sm-4 control-label">Ngày nhận sản phẩm</label>
                            <div class="col-sm-8">
                                <input value="@a.ngayLap.ToString("dd/MM/yyyy")" disabled="disabled" type="text" class="form-control input-sm" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="password-1" class="col-sm-4 control-label">Ngày giao sản phẩm</label>
                            <div class="col-sm-8">
                                <input value="@a.ngayGiao.ToString("dd/MM/yyyy")" disabled="disabled" type="text" class="form-control input-sm" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="firstname-1" class="col-sm-4 control-label">Nhân viên</label>
                            <div class="col-sm-8">
                                <input value="@a.tenNhanVien" id="tenNhanVien" type="text" class="form-control input-sm" disabled="disabled" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="firstname-1" class="col-sm-4 control-label">Tên khách hàng</label>
                            <div class="col-sm-8">
                                <input value="@a.tenKhachHang" id="tenKhachHang" type="text" class="form-control input-sm" disabled="disabled" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="firstname-1" class="col-sm-4 control-label">Số điện thoại</label>
                            <div class="col-sm-8">
                                <input value="@a.soDienThoai" id="soDienThoai" type="text" class="form-control input-sm" disabled="disabled" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="firstname-1" class="col-sm-4 control-label">Lý do bảo hành</label>
                            <div class="col-sm-8">
                                <textarea placeholder="Lý do bảo hành viết tại đây" class="form-control input-sm">@a.ghiChu</textarea>
                            </div>
                        </div>
                    </div>
                    }
                </div>
            </form>
        </div>
    </div>
</div>
<script src="~/Scripts/bootstrap.min.js"></script>