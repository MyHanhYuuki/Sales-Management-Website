<!-- Start recent activity item -->
<div class="recent-activity-item recent-activity-success">
    <div class="recent-activity-badge">
        <span class="recent-activity-badge-userpic"></span>
    </div>
    <div class="recent-activity-body">
        <div class="recent-activity-body-head">
            <div class="recent-activity-body-head-caption">
                <h3 class="recent-activity-body-title">Bán Hàng</h3>
            </div>
        </div>
        @foreach (var item in ViewBag.thongTinHoatDongBanHang)
        {
            <div class="recent-activity-body-content">
                @if (@item.trangThaiBanHang == true)
                {
                    <p>
                        @item.tenNhanVienBanHang đã tạo phiếu bán hàng số @item.soPhieuBanHang vào ngày <span class="text-muted">@item.ngayChinhSuaBanHang</span>
                    </p>
                }
                else
                {
                    <p>
                        @item.tenNhanVienBanHang đã hủy phiếu bán hàng số @item.soPhieuBanHang vào ngày <span class="text-muted">@item.ngayChinhSuaBanHang</span>
                    </p>
                }
            </div>
        }
    </div>
</div>
