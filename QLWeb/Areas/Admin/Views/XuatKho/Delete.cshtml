@model IEnumerable<Common.ViewModels.PhieuXuatKhoViewModel>
@{
    ViewBag.Title = "Huỷ phiếu xuất kho";
    Layout = "~/Areas/Admin/Views/Layout/HomeLayout.cshtml";
}
<section id="page-content">
    <div class="header-content">
        <h2><i class="fa fa-list-alt"></i>Phiếu Xuất Kho</h2>
        <div class="breadcrumb-wrapper hidden-xs">
            @using (Html.BeginForm("Deletes", "XuatKho"))
            {
                <button class="btn btn-sm btn-danger btn-xs btn-push" id="submit">
                    <i class="fa fa-trash"></i> Hủy Phiếu Xuất Kho
                </button>
                <input value="" type="hidden" id="id" name="id" class="form-control input-sm" />
            }
            <button class="btn btn-lg btn-success btn-xs btn-push" onclick="@("window.location.href='" + @Url.Action("Index", "XuatKho") + "'"); ">
                <i class="glyphicon glyphicon-arrow-left"></i> Quay lại
            </button>
        </div>
    </div>
    <div class="body-content animated fadeIn">
        <div class="row">
            <div class="alert alert-danger1 fade in">
                <span><i class="fa fa-bullhorn"></i> Bạn có chắc chắn muốn hủy?</span>
            </div>
            @{Html.RenderAction("ThongTinPhieuXuatKho", "XuatKho");}
        </div>
    </div>
</section>
<script>$("#submit").on('click keyup input propertychange paste change', function () {
        var str1 = document.getElementById("soPhieuXuatKho").value;
        $('#id').val(str1);
    });</script>